{
  "name": "local-business-hub",
  "version": "1.0.0",
  "description": "All-in-One Platform for Local Businesses - Website, Booking, CRM, and Reviews Management",
  "main": "index.html",
  "scripts": {
    "dev": "npx serve -l 3000 .",
    "build": "npm run minify:css && npm run minify:js",
    "minify:css": "npx clean-css-cli -o style.min.css style.css",
    "minify:js": "npx terser app.js -o app.min.js --compress --mangle",
    "deploy:netlify": "netlify deploy --prod",
    "deploy:vercel": "vercel --prod",
    "deploy:gh-pages": "gh-pages -d .",
    "optimize": "npm run optimize:images",
    "optimize:images": "test -f market_growth_chart.png && npx @squoosh/cli --oxipng '{}' market_growth_chart.png -d optimized || echo 'No images to optimize'",
    "serve": "npx serve .",
    "lighthouse": "npx lighthouse http://localhost:3000 --view"
  },
  "keywords": [
    "local-business",
    "saas",
    "booking-system",
    "crm",
    "website-builder",
    "reviews"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "clean-css-cli": "^5.6.3",
    "terser": "^5.31.0",
    "gh-pages": "^6.1.1",
    "lighthouse": "^12.8.2",
    "serve": "^14.2.1",
    "@squoosh/cli": "^0.7.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Tjkuch4060/local-business-hub.git"
  },
  "bugs": {
    "url": "https://github.com/Tjkuch4060/local-business-hub/issues"
  },
  "homepage": "https://tjkuch4060.github.io/local-business-hub"
}
